{# Default/contact.html.twig #}
{% extends 'SFBCNWebsiteBundle::layout.html.twig' %}

{% block content %}
    <section class="page-content contact">
        <h1>Contacto</h1>
        <p>Rellena este formulario para contactar con nosotros</p>
        <form method="post" id="contact" action="{{ path('contact_post') }}">
            <fieldset class="contact-name">
                <label for="nombre">Nombre</label>
                <input id="nombre" type="text" name="nombre" class="form-validate validate-mandatory" />
            </fieldset>
            <fieldset class="contact-email">
                <label for="email">E-mail</label>
                <input id="email" type="text" name="email" class="form-validate validate-email" />
            </fieldset>
            <fieldset class="contact-message">
                <label for="mensaje">Mensaje</label>
                <textarea id="mensaje" name="mensaje" class="form-validate validate-mandatory"></textarea>
            </fieldset>
            <input type="submit" name="Enviar" value="Enviar"/>
        </form>
    </section>
    <aside class="page-content social">
        <p>Búscanos en las redes sociales</p>
        <ul>
            <li>
                <a class="social-twitter" href="http://twitter.com/symfony_bcn">
                    Síguenos en <span class="service">Twitter</span>
                </a>
            </li>
            <li>
                <a class="social-github" href="https://github.com/symfony-barcelona/symfony-barcelona">
                    Clónanos en <span class="service">GitHub</span>
                </a>
            </li>
            <li>
                <a class="social-groups" href="https://groups.google.com/forum/#!forum/symfony_barcelona">
                    Comenta en <span class="service">Google Groups</span>
                </a>
            </li>
            <li>
                <a class="social-sensio" href="https://connect.sensiolabs.com/club/symfony-barcelona">
                    Únete en <span class="service">Sensio Connect</span>
                </a>
            </li>
        </ul>
    </aside>
{% endblock %}