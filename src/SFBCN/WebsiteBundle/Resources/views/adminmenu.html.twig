{% set menuItems = [
    {anchor: 'Dashboard', link: path('admin_menu')},
    {anchor: 'Events', link: path('event')},
] %}
{% if not activeItem is defined %}
    {% set activeItem = 0 %}
{% endif %}
<div class="navbar">
    <div class="navbar-inner">
        <div class="container">
            <a class="brand" href="#">Symfony Barcelona</a>
            <ul class="nav">
                {% for menuItem in menuItems %}
                <li{% if loop.index0 == activeItem %} class="active"{% endif %}><a href="{{ menuItem.link }}">{{ menuItem.anchor }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
</div>