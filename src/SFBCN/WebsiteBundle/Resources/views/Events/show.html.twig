{# Events/index.html.twig #}
{% extends 'SFBCNWebsiteBundle::layout.html.twig' %}

{% block content %}
    <div class="page-content">
        <section class="event-detail">
            <h1>Eventos</h1>
            <div class="event-info">
                <h2>{{ event.title }}</h2>
                <p>
                    <strong>¿Cuándo?</strong> {{ event.datetime|date('Y-M-d H:i') }}<br />
                    <strong>¿Dónde?</strong> {{ event.location }}
                </p>
                {{ event.body | raw }}
            </div>
            {% if event.gmaps is not empty %}
            <div class="event-map">
                <iframe width="300" height="300" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="{{ event.gmaps }}&amp;output=embed"></iframe>
                <br /><small><a href="{{ event.gmaps }}">Muestra un mapa más grande</a></small>
            </div>
            {% endif %}
        </section>
    </div>
{% endblock %}